<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.3.min.js"></script>
  <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/jquery.validate.min.js"></script>
  <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/additional-methods.min.js"></script>
<script src="../javascripts/goals.js"></script>
<link rel="stylesheet" type="text/css" href="../stylesheets/common.css"/>
<div class="container text-center" style="padding-bottom: 20px;">
        <h1 class="col-10 col-sm-10 col-md-10 col-lg-10 col-xl-12">Manage Your Goals&nbsp;<i class="fas fa-bullseye" style='font-size:80px; color: green;'></i></h1>
</div>
<div class="container text-center">
<h2 class="text-left">Daily Activity Goals&nbsp;<i class="fas fa-running" style='font-size:50px; color:green;'></i></h2>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Value</th>
      <th scope="col">Manage</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="name">Daily Steps Goal</td>
      <td id="stepval" class="editableColumns"></td>
      <td><input type="submit" value="Edit" class="editActivity"><input type="submit" disabled="true" value="Save" class="saveActivity"></td>
    </tr>
    <tr>
      <td class="name">Daily Active Minutes</td>
      <td id="activeMins" class="editableColumns"></td>
      <td><input type="submit" value="Edit" class="editActivity"><input type="submit" disabled="true" value="Save" class="saveActivity"></td>
    </tr>
    <tr>
      <td class="name">Daily Calories burned(including BMR calories)</td>
      <td id="calOutval" class="editableColumns"></td>
      <td><input type="submit" value="Edit" class="editActivity"><input type="submit" disabled="true" value="Save" class="saveActivity"></td>
    </tr>
    <tr>
      <td class="name">Daily Distance covered</td>
      <td id="distval" class="editableColumns"></td>
      <td><input type="submit" value="Edit" class="editActivity"><input type="submit" disabled="true" value="Save" class="saveActivity"></td>
    </tr>
  </tbody>
</table>


</div>

<div class="container text-center">
<h2 class="text-left">Weight Goals&nbsp;<i class="fas fa-fire-alt" style='font-size:50px; color:orange;'></i></h2>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Start Date(dd-mm-yyyy)</th>
      <th scope="col">Start Weight(kg)</th>
      <th scope="col">Goal Weight(kg)</th>
      <th scope="col">Manage</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td id="startDate" class="startEditable"></td>
      <td id="startweight" class="weightEditable"></td>
      <td id="GoalWeight" class="weightEditable"></td>
      <td><input type="submit" value="Edit" class="editWeight"><input type="submit" disabled="true" value="Save" class="saveWeight"></td>
    </tr>
    
  </tbody>
</table>


</div>

<div class="container text-center">
<h2 class="text-left">Weight Logs&nbsp;<i class="fas fa-pen" style='font-size:50px; color:yellow;'></i></h2>
<table class="table table-striped table-bordered" id="weightlog">
<thead class="thead-dark">
    <tr>
      <th scope="col">Date(dd-mm-yyyy)</th>
      <th scope="col"> Time</th>
      <th scope="col"> Weight(kg)</th>
      <th scope="col">BMI</th>
      <th scope="col" align="right">Manage</th>
    </tr>
  </thead>
    <tbody>
    
  </tbody>
</table>
</div>

<div class="container" style="padding-bottom: 30px;">
<h2 class="text-left">Create Weight Log&nbsp;<i class="fas fa-pen" style='font-size:50px; color:yellow; padding-bottom:10px;'></i></h2>
  
   Date:
  <input type="text" name="weightdate" class="logtextDate colon" placeholder="DD-MM-YYYY">
   Weight(kg):
  <input type="number" name="weight" class="logtext">
  <input type="submit" value="submit" class="submitLog">


</div>

<div class="container" style="padding-bottom: 1px;">
<h2 id="progressStatus"></h2>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" id="red" style="">
    Long Way to go!
  </div>
  <div class="progress-bar progress-bar-striped bg-warning progress-bar-animated" role="progressbar" id="yellow" style="">
    Getting there!
  </div>
  <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" id="green" style="">
    Almost there!
  </div>
</div>
</div>
<div class="container" style="padding-bottom: 20px;">
  <div class="row justify-content-between">
     <h4 style="color: red;" id="start"></h4>
        <h4 style="color: rgb(13, 189, 13);" id="goal"></h4>
    </div>
</div>

<div class="container text-center" style="padding-bottom: 30px;">
<h2 class="text-left">Daily Food Goals(Based on Activity Progress)&nbsp;<i class="fas fa-utensils" style='font-size:50px; color:red;'></i></h2>
<div class="small text-muted" id="gainMessage" style="color: #FF0000;"></div>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Calories In(kcal)</th>
      <th scope="col">Food Plan Intensity Code</th>
      <th scope="col">Estimated End date</th>
      <th scope="col">Manage</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td id="foodCals" class="foodEditable"></td>
      <td id="intensity" class="foodEditableList"></td>
      <td id="endDate" class="foodEditable"></td>
      <td><input type="submit" value="Edit" class="editFood"><input type="submit" disabled="true" value="Save" class="saveFood"></td>
    </tr>
    
  </tbody>
</table>
 
</div>

<div class="container text-center">
<h2 class="text-left">Daily Nutritional Value Goals&nbsp;<i class="fas fa-utensils" style='font-size:50px; color:red;'></i></h2>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nutritional Value 1</th>
      <th scope="col">Amount </th>
      <th scope="col">Nutritional Value 2</th>
      <th scope="col">Amount</th>
      <th scope="col">Manage</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td id="val1" class="nutritionEditable"></td>
      <td id="amount1" class="nutritionAmount"></td>
      <td id="val2" class="nutritionEditable"></td>
      <td id="amount2" class="nutritionAmount"></td>
      <td><input type="submit" value="Edit" class="editNutrition"><input type="submit" disabled="true" value="Save" class="saveNutrition"></td>
    </tr>
    
  </tbody>
</table>
 
</div>

<div class="modal fade" id="goalCalculator" tabindex="-1" role="dialog" aria-labelledby="goalCalculatorTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="goalCalculatorTitle">Calories Burned Goal Calculator&nbsp;<i class="fas fa-running" style='font-size:50px; color:red; padding-bottom:10px;'></i> </h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <div class="container-fluid">
        <form id="calculate">
                    <div class="form-row">
                        
                        <div class="form-group col-sm-6">
                            <label >Weight *</label>
                            <input class="form-control" id="weight" name="weight" type="number" placeholder="kg">
                       
                        </div>
                        <div class="form-group col-sm-6">
                           <label >Height </label>
                            <input class="form-control" id="height" name="height" type="number" placeholder="cm">
                        </div>
                        <div class="form-group col-sm-6">
                            <label> Age *</label>
                            <input type="number" class="form-control" id="age" name="age" name="newAmount">
                        </div>
                        <div class="form-group col-sm-6">
                            <label >Sex *</label>
                           <select class="form-control" id="gender">
                             <option value="1">Male</option>
                             <option value="2">Female</option>
                           </select>          
                        </div>
                        <div class="form-group col-sm-12">
                            <label >Effort factor *</h3>
                            <div class="form-row">
                              <div class="form-group col-sm-9">
                              <select class="form-control" id="effort">
                                  <option value="1.2">Sedantry</option>
                                   <option value="1.375">Mild(1 - 3 days a week)</option>
                                    <option value="1.55">Moderate( 3 - 4 days a week) </option>
                                     <option value="1.7">Heavy(5 - 7 days a week)</option>
                                     <option value="1.9">Extreme(multiple sessions daily)</option>
                                </select>
                            </div>
                        
                        <div class="form-group col-sm-3">
                          
                             <button type="button" class="btn btn-success" id="calculateButton">
                       Calculate</button>
                       </div>
                        </div>
                        </div>
                       
                         
                        

                         <h3 id="goalCalc" class="col-sm-12" style="color: rgb(82, 226, 82);"></div>
                         </form>
                </div>
                
        
      </div>
      <div class="modal-footer">
        <button type="button" disabled class="btn btn-success" data-dismiss="modal" id="useThis">Use value</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      
      </div>
    </div>
  </div>
</div>