
<script src="../javascripts/goals.js"></script>
<link rel="stylesheet" type="text/css" href="../stylesheets/common.css"/>
<div class="container text-center" style="padding-bottom: 50px;">
        <h1 class="col-10 col-sm-10 col-md-10 col-lg-10 col-xl-12">Manage Your Goals&nbsp;<i class="fas fa-bullseye" style='font-size:80px; color: green;'></i></h1 class="">
</div>
<div class="container text-center">
<h2 class="text-left">Daily Activity Goals&nbsp;<i class="fas fa-running" style='font-size:50px; color:green;'></i></h2>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Value</th>
      <th scope="col">Manage</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="name">Daily Steps Goal</td>
      <td id="stepval" class="editableColumns"></td>
      <td><input type="submit" value="Edit" class="editActivity"><input type="submit" disabled="true" value="Save" class="saveActivity"></td>
    </tr>
    <tr>
      <td class="name">Daily Active Minutes</td>
      <td id="activeMins" class="editableColumns"></td>
      <td><input type="submit" value="Edit" class="editActivity"><input type="submit" disabled="true" value="Save" class="saveActivity"></td>
    </tr>
    <tr>
      <td class="name">Daily Calories burned(including BMR calories)</td>
      <td id="calOutval" class="editableColumns"></td>
      <td><input type="submit" value="Edit" class="editActivity"><input type="submit" disabled="true" value="Save" class="saveActivity"></td>
    </tr>
    <tr>
      <td class="name">Daily Distance covered</td>
      <td id="distval" class="editableColumns"></td>
      <td><input type="submit" value="Edit" class="editActivity"><input type="submit" disabled="true" value="Save" class="saveActivity"></td>
    </tr>
  </tbody>
</table>


</div>

<div class="container text-center">
<h2 class="text-left">Weight Goals&nbsp;<i class="fas fa-fire-alt" style='font-size:50px; color:orange;'></i></h2>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Start Date(dd-mm-yyyy)</th>
      <th scope="col">Start Weight</th>
      <th scope="col">Goal Weight</th>
      <th scope="col">Manage</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td id="startDate" class="startEditable"></td>
      <td id="startweight" class="weightEditable"></td>
      <td id="GoalWeight" class="weightEditable"></td>
      <td><input type="submit" value="Edit" class="editWeight"><input type="submit" disabled="true" value="Save" class="saveWeight"></td>
    </tr>
    
  </tbody>
</table>


</div>

<div class="container text-center">
<h2 class="text-left">Weight Logs&nbsp;<i class="fas fa-pen" style='font-size:50px; color:yellow;'></i></h2>
<table class="table table-striped table-bordered" id="weightlog">
<thead class="thead-dark">
    <tr>
      <th scope="col">Date(dd-mm-yyyy)</th>
      <th scope="col"> Time</th>
      <th scope="col"> Weight</th>
      <th scope="col">BMI</th>
      <th scope="col" align="right">Manage</th>
    </tr>
  </thead>
    <tbody>
    
  </tbody>
</table>
</div>

<div class="container" style="padding-bottom: 30px;">
<h2 class="text-left">Create Weight Log&nbsp;<i class="fas fa-pen" style='font-size:50px; color:yellow; padding-bottom:10px;'></i></h2>
  
   Date(dd-mm-yyyy):
  <input type="text" name="weightdate" class="logtextDate">
   Weight(kg):
  <input type="text" name="weight" class="logtext">
  <input type="submit" value="submit" class="submitLog">


</div>

<div class="container" style="padding-bottom: 1px;">
<h2 id="progressStatus"></h2>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" id="red" style="">
    Long Way to go!
  </div>
  <div class="progress-bar progress-bar-striped bg-warning progress-bar-animated" role="progressbar" id="yellow" style="">
    Getting there!
  </div>
  <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" id="green" style="">
    Almost there!
  </div>
</div>
</div>
<div class="container" style="padding-bottom: 5px;">
  <div class="row justify-content-between">
     <h4 style="color: red;" id="start"></h4>
        <h4 style="color: rgb(13, 189, 13);" id="goal"></h4>
    </div>
</div>