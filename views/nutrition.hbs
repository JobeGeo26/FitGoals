<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
<link rel="stylesheet" type="text/css" href="../stylesheets/common.css"/>
<script src="../javascripts/nutrition.js"></script>
<div class="container text-center">
        <h1 class="col-10 col-sm-10 col-md-10 col-lg-10 col-xl-12">Nutrition Breakdown&nbsp;<i class="fas fa-chart-line" style='font-size:80px; color: yellow;'></i></h1 class="">
</div>
<div class="container" style="padding-bottom: 50px;" id="graphContainer">

        <canvas class="col-10 col-sm-10 col-md-10 col-lg-10 col-xl-12" id="caloriesIn" width="1000vw" height="450vh"></canvas>
</div>

<div class="container text-center" style="padding-bottom: 30px;">
<h2 class="text-left">Daily Nutrition Logs&nbsp;<i class="fas fa-pen" style='font-size:50px; color:yellow;'></i></h2>
<table class="table table-striped table-bordered" id="nutritionLog">
<thead class="thead-dark">
    <tr>
      <th scope="col">Food Name</th>
      <th scope="col"> Meal Type</th>
      <th scope="col"> Amount</th>
      <th scope="col"> Brand</th>
      <th scope="col">Calories</th>
      <th scope="col">Carbohydrates</th>
      <th scope="col">Fats</th>
      <th scope="col">Fiber</th>
      <th scope="col">Protein</th>
      <th scope="col" align="right">Manage</th>
    </tr>
  </thead>
    <tbody>
    
  </tbody>
</table>
</div>

<div class="container" style="padding-bottom: 30px;">
<h2 class="text-left">Create Nutrition Log&nbsp;<i class="fas fa-pen" style='font-size:50px; color:yellow; padding-bottom:10px;'></i></h2>
  
                   
                <hr>
                
                <form>
                    <div class="form-row">
                        
                        <div class="form-group col-sm-6">
                            <label >Select Food *</label>
                            <select class="form-control" id="logFood">
                             
                                    
                            </select>
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Meal Type * </label>
                            <select class="form-control" id="logType">
                                    <option value="1">Breakfast</option>
                                    <option value="2">Morning Snack</option>
                                    <option value="3">Lunch</option>
                                    <option value="4">Afternoon Snack</option>
                                    <option value="5">Dinner</option>
                                    <option value="7">Anytime</option>
                             

                            </select>
                        </div>
                        <div class="form-group col-sm-6">
                            <label> Amount *</label>
                            <input type="text" class="form-control" id="logAmount">
                        </div>
                        <div class="form-group col-sm-6">
                            <label >Units *</label>
                            <select class="form-control" id="logUnit">
                             

                            </select>
                        </div>
                        <div class="form-group col-sm-6">
                            <label> Set as Favourite(optional)</label>
                            <select class="form-control" id="logFave">
                                
                                    <option>false</option>
                                    <option>true</option>
                             

                            </select>
                        </div>
                        <div class="form-group col-sm-6">
                            <label> Brand Name(optional)</label>
                            <input type="number" class="form-control" id="logBrand">
                        </div>
                        <div class="form-group col-sm-6">
                            <label> Calories(optional)</label>
                            <input type="number" class="form-control" id="logCals">
                        </div>
                       
                         
                        <div id="passError" class="error col-sm-12"></div>
                        <div class="form-group col-10">
                           <button  type="button" class=" btn btn-outline-success" id="saveFood">Save</button>
                        </div>
                        <div class="form-group col-2">
                          <label>Required fields *</label>
                        
                        </div>
                    </div>
                </form>
                <hr>

<div class="container" style="padding-bottom: 1px;">
<h2 id="progressStatus"></h2>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" id="red" style="">
    Long Way to go!
  </div>
  <div class="progress-bar progress-bar-striped bg-warning progress-bar-animated" role="progressbar" id="yellow" style="">
    Getting there!
  </div>
  <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" id="green" style="">
    Almost there!
  </div>
</div>
</div>
<div class="container text-right" style="padding-bottom: 20px;">
        <h4 style="color: rgb(13, 189, 13);" id="goal"></h4>
</div>