<div class="container text-center" style="padding-bottom: 30px;">
<h2 class="text-left">Daily Activity Logs&nbsp;<i class="fas fa-pen" style='font-size:50px; color:yellow;'></i></h2>
<table class="table table-striped table-bordered" id="activityLog">
<thead class="thead-dark">
    <tr>
      <th scope="col">Start Time</th>
      <th scope="col"> Name</th>
      <th scope="col"> Description</th>
      <th scope="col"> Distance</th>
      <th scope="col">Duration</th>
      <th scope="col">Calories Burned</th>
      <th scope="col" align="right">Manage</th>
    </tr>
  </thead>
    <tbody>
    
  </tbody>
</table>
</div>

<div class="container" style="padding-bottom: 30px;">
<h2 class="text-left">Create Activity Log&nbsp;<i class="fas fa-pen" style='font-size:50px; color:yellow; padding-bottom:10px;'></i></h2>
  
                   
                <hr>
                
                <form id="logForm">
                    <div class="form-row">
                        
                        <div class="form-group col-sm-6">
                            <label >Select Activity *</label>
                            <select class="form-control" id="logActivity" name="logActivity">
                             
                                    
                            </select>
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Start Time * </label>
                            <input type="text" class="form-control colon" id="logStartTime" name="logStartTime" placeholder="HH:mm">
                        </div>
                        <div class="form-group col-sm-6">
                            <label> Duration *</label>
                            <input type="text" class="form-control colon" id="logDuration" name="logDuration" placeholder="HH:mm:ss">
                        </div>
                        <div class="form-group col-sm-6">
                            <label >Calories Burned(optional)</label>
                            <input type="number" class="form-control" id="logCals">
                        </div>
                        <div class="form-group col-sm-6">
                            <label> Distance(optional)</label>
                            <input type="number" class="form-control" id="logDist">
                        </div>
                         
                        <div id="passError" class="error col-sm-12"></div>
                        
                         <div class="form-group col-6">
                           <button  type="button" class=" btn btn-outline-success" id="saveActivity">Save</button>
                        </div>
                         <div class="form-group col-sm-1.5">
                        <button type="button" class="btn btn-outline-warning" data-toggle="modal" data-target="#ManageFaveActivities">
                        Favourites</button>
                       </div>
                        <div class="form-group col-sm-2">
                        <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#createActivity">
                       Log New</button>
                       </div>
                        <div class="form-group col-2">
                          <label>Required fields *</label>
                        
                        </div>
                    </div>
                </form>
                <hr>

<div class="container" style="padding-bottom: 1px;">
<h2 id="progressStatus"></h2>
<div class="progress">
  <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" id="red" style="">
    Long Way to go!
  </div>
  <div class="progress-bar progress-bar-striped bg-warning progress-bar-animated" role="progressbar" id="yellow" style="">
    Getting there!
  </div>
  <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" id="green" style="">
    Almost there!
  </div>
</div>
</div>
<div class="container text-right" style="padding-bottom: 20px;">
        <h4 style="color: rgb(13, 189, 13);" id="goal"></h4>
</div>




<!-- Modal -->
<div class="modal fade" id="ManageFaveActivities" tabindex="-1" role="dialog" aria-labelledby="ManageFaveActivitiesTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="ManageFaveActivitiesTitle">Favourite Activities&nbsp;<i class="far fa-star" style='font-size:50px; color:yellow; padding-bottom:10px;'></i> </h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <div class="container-fluid">
         <form id="faveForm">
                    <div class="form-row">
                        
                        <div class="form-group col-sm-12">
                            <h3 >Add Favourite Activity</h3>
                            <div class="form-row">
                              <div class="form-group col-sm-9">
                             <input list="hosting-activities" type="text" class="form-control" id="addFave" placeholder="start typing....">
                             <datalist id="hosting-activities">
                               

                             </datalist>
                            </div>
                        
                        <div class="form-group col-sm-3">
                          
                             <button type="button" class="btn btn-success" id="submitFave">
                       Submit</button>
                       </div>
                        </div>
                        </div>

                         <div class="form-group col-sm-12">
                            <h3 >Delete Favourite Activity</h3>
                            <div class="form-row">
                              <div class="form-group col-sm-9">
                             <input list="fave-activities" type="text" class="form-control" id="deleteFave" placeholder="search favourite....">
                             <datalist id="fave-activities">
                               

                             </datalist>
                            </div>
                        
                        <div class="form-group col-sm-3">
                          
                             <button type="button" class="btn btn-danger" id="delFave">
                       Delete</button>
                       </div>
                        </div>
                        </div>
                        
                    </div>
                </form>
                </div>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
      
      </div>
    </div>
  </div>
</div>





<!-- Modal -->
<div class="modal fade" id="createActivity" tabindex="-1" role="dialog" aria-labelledby="createActivityTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="createActivityTitle">Log New Activity&nbsp;<i class="fas fa-running" style='font-size:50px; color:red; padding-bottom:10px;'></i> </h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <div class="container-fluid">
             <form id="createForm">
                    <div class="form-row">
                        
                        <div class="form-group col-sm-6">
                            <label >Activity Name*</label>
                            <input type="text" class="form-control" id="newActivity" name="newActivity" placeholder="name...">
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Start Time * </label>
                            <input type="text" class="form-control colon" id="newStartTime" name="newStartTime" placeholder="HH:mm">
                        </div>
                        <div class="form-group col-sm-6">
                            <label> Duration *</label>
                            <input type="text" class="form-control colon" id="newDuration" name="newDuration" placeholder="HH:mm:ss">
                        </div>
                        <div class="form-group col-sm-6">
                            <label >Calories Burned *</label>
                            <input type="number" class="form-control" id="newCals" name="newCals">
                        </div>
                        <div class="form-group col-sm-6">
                            <label> Distance(optional)</label>
                            <input type="number" class="form-control" id="newDist">
                        </div>
                         
                        <div id="newError" class="error col-sm-12"></div>
                        
                         <div class="form-group col-6">
                           <button  type="button" class=" btn btn-outline-success" id="saveNewActivity">Save</button>
                        </div>
        
          
          </div>
                
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      
      </div>
    </div>
  </div>
</div>